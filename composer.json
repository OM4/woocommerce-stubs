{
    "name": "php-stubs/woocommerce-stubs",
    "description": "WooCommerce function and class declaration stubs for static analysis.",
    "keywords": [
        "woocommerce",
        "wordpress",
        "static analysis",
        "phpstan"
    ],
    "homepage": "https://github.com/php-stubs/woocommerce-stubs",
    "license": "MIT",
    "repositories": [
        {
            "type": "git",
            "url": "git@github.com:OM4/woocommerce-dist.git"
        }
    ],
    "require-dev": {
        "php": "~7.1 || ~8.0",
        "composer/installers": "~2.0",
        "om4/woocommerce-dist": "6.8.1",
        "php-stubs/generator": "^0.8.0",
        "php-stubs/wordpress-stubs": "^5.3 || ^6.0"
    },
    "suggest": {
        "szepeviktor/phpstan-wordpress": "WordPress extensions for PHPStan",
        "symfony/polyfill-php73": "Symfony polyfill backporting some PHP 7.3+ features to lower PHP versions"
    },
    "minimum-stability": "stable",
    "scripts": {
        "cleanup": "rm -rf ./woocommerce",
        "generate": [
            "@cleanup",
            "composer update",
            "./generate.sh"
        ]
    },
    "scripts-descriptions": {
        "cleanup": "Remove all ignored files.",
        "generate": "Generate stub files."
    },
    "extra": {
        "installer-paths": {
            "woocommerce/packages/{$name}/": [
                "woocommerce/action-scheduler",
                "woocommerce/woocommerce-blocks",
                "woocommerce/woocommerce-admin"
            ],
            "woocommerce/": [
                "om4/woocommerce-dist"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true
        }
    }
}
